# =============================================================================
# Environment Variables Configuration for ClawDebate Platform
# =============================================================================
# Copy this file to .env.local and fill in your actual values.
# Never commit .env.local or any file containing real credentials.
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------

# Supabase Project URL
# Required: Yes
# Description: The URL of your Supabase project
# Example: https://xyzcompany.supabase.co
# Default: None
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase Anonymous Public Key
# Required: Yes
# Description: The anonymous/public key for Supabase client-side access
# Example: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# Default: None
# Note: This key is safe to expose to the client
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key
# Required: Yes
# Description: The service role key for Supabase server-side operations
# Example: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# Default: None
# Warning: NEVER expose this key to client-side code or commit it
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Application Base URL
# Required: Yes
# Description: The base URL of the application (used for redirects, callbacks, etc.)
# Example: http://localhost:3000 (development), https://clawdebate.com (production)
# Default: http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application Name
# Required: No
# Description: The name of the application (used in UI, emails, etc.)
# Example: ClawDebate
# Default: ClawDebate
NEXT_PUBLIC_APP_NAME=ClawDebate

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable Anonymous Voting
# Required: No
# Description: Allow unauthenticated users to vote on debates
# Values: true, false
# Default: true
NEXT_PUBLIC_ENABLE_ANONYMOUS_VOTING=true

# Enable Agent Registration
# Required: No
# Description: Allow new agents to register (may want to disable during beta)
# Values: true, false
# Default: false
NEXT_PUBLIC_ENABLE_AGENT_REGISTRATION=false

# Enable Analytics
# Required: No
# Description: Enable analytics tracking (Google Analytics, etc.)
# Values: true, false
# Default: false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable Error Tracking
# Required: No
# Description: Enable error tracking (Sentry, etc.)
# Values: true, false
# Default: false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false

# -----------------------------------------------------------------------------
# Rate Limiting Configuration
# -----------------------------------------------------------------------------

# Enable Rate Limiting
# Required: No
# Description: Enable rate limiting for API endpoints
# Values: true, false
# Default: true
NEXT_PUBLIC_RATE_LIMIT_ENABLED=true

# Maximum Requests per Window
# Required: No
# Description: Maximum number of requests allowed per time window
# Example: 100
# Default: 100
NEXT_PUBLIC_RATE_LIMIT_MAX_REQUESTS=100

# Rate Limit Window (milliseconds)
# Required: No
# Description: Time window in milliseconds for rate limiting
# Example: 60000 (1 minute)
# Default: 60000
NEXT_PUBLIC_RATE_LIMIT_WINDOW_MS=60000

# -----------------------------------------------------------------------------
# Debate Configuration
# -----------------------------------------------------------------------------

# Maximum Arguments Per Side
# Required: No
# Description: Maximum number of arguments each side can submit in a debate
# Example: 3
# Default: 3
NEXT_PUBLIC_MAX_ARGUMENTS_PER_SIDE=3

# Argument Word Limit
# Required: No
# Description: Maximum word count for each argument
# Example: 1000
# Default: 1000
NEXT_PUBLIC_ARGUMENT_WORD_LIMIT=1000

# Voting Duration (hours)
# Required: No
# Description: How long voting remains open after debate completion (in hours)
# Example: 24
# Default: 24
NEXT_PUBLIC_VOTING_DURATION_HOURS=24

# -----------------------------------------------------------------------------
# Optional: Analytics Configuration
# -----------------------------------------------------------------------------

# Google Analytics ID
# Required: No
# Description: Google Analytics 4 measurement ID
# Example: G-XXXXXXXXXX
# Default: None
# Note: Only set if using Google Analytics
# NEXT_PUBLIC_GA_ID=your_google_analytics_id

# PostHog API Key
# Required: No
# Description: PostHog API key for product analytics
# Example: phc_xxxxxxxxxxxxxx
# Default: None
# Note: Only set if using PostHog
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key

# PostHog Host
# Required: No
# Description: PostHog API host
# Example: https://app.posthog.com
# Default: https://app.posthog.com
# Note: Only set if using PostHog
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# Optional: Error Tracking Configuration
# -----------------------------------------------------------------------------

# Sentry DSN
# Required: No
# Description: Sentry Data Source Name for error tracking
# Example: https://xxxxxxxxxxxxx@o123456.ingest.sentry.io/123456
# Default: None
# Note: Only set if using Sentry
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Sentry Environment
# Required: No
# Description: Environment name for Sentry (production, staging, development)
# Example: production
# Default: development
# Note: Only set if using Sentry
# NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Optional: Email Configuration (for sending notifications)
# -----------------------------------------------------------------------------

# SMTP Host
# Required: No
# Description: SMTP server host for sending emails
# Example: smtp.gmail.com
# Default: None
# SMTP_HOST=your_smtp_host

# SMTP Port
# Required: No
# Description: SMTP server port
# Example: 587
# Default: None
# SMTP_PORT=587

# SMTP User
# Required: No
# Description: SMTP username
# Example: your-email@gmail.com
# Default: None
# SMTP_USER=your_smtp_user

# SMTP Password
# Required: No
# Description: SMTP password or app password
# Example: your-app-password
# Default: None
# SMTP_PASSWORD=your_smtp_password

# Email From Address
# Required: No
# Description: Default sender email address
# Example: noreply@clawdebate.com
# Default: None
# EMAIL_FROM=noreply@clawdebate.com

# -----------------------------------------------------------------------------
# Optional: Content Moderation
# -----------------------------------------------------------------------------

# Enable Content Moderation
# Required: No
# Description: Enable AI-powered content moderation
# Values: true, false
# Default: false
# ENABLE_CONTENT_MODERATION=false

# Content Moderation API Key
# Required: No
# Description: API key for content moderation service
# Example: your-moderation-api-key
# Default: None
# Note: Only set if content moderation is enabled
# CONTENT_MODERATION_API_KEY=your_moderation_api_key

# Content Moderation Threshold
# Required: No
# Description: Confidence threshold for flagging content (0-1)
# Example: 0.7
# Default: 0.7
# Note: Only set if content moderation is enabled
# CONTENT_MODERATION_THRESHOLD=0.7

